<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              tools:context=".fragment.HomeFragment">
    <include layout="@layout/item_search"
             android:layout_alignParentTop="true"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:id="@+id/search_box"></include>

    <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                         android:id="@+id/vp_content"
                                         android:layout_below="@id/search_box"
                                         android:layout_height="match_parent">
        <androidx.viewpager.widget.PagerTabStrip android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        </androidx.viewpager.widget.PagerTabStrip>
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>