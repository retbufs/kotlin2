<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <RadioGroup
            android:layout_marginTop="20dp"
            android:id="@+id/check_login_method"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30dp">
        <RadioButton
                android:id="@+id/pass_method"
                android:layout_weight="1"
                android:text="密码登入"
                android:checked="true"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <RadioButton
                android:id="@+id/code_method"
                android:layout_weight="1"
                android:text="验证登入"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RadioGroup>
    <RelativeLayout
            android:id="@+id/pass_login"
            android:layout_below="@id/check_login_method"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/rl_login_box"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_below="@id/check_login_method"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/tv_phone"
                android:text="手机号码"
                android:layout_marginLeft="4dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/ed_phone"
                android:layout_toRightOf="@id/tv_phone"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:layout_marginLeft="4dp"
                android:paddingLeft="8dp"
                android:background="@drawable/edit_selected_drawable"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        <TextView
                android:id="@+id/tv_pass"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_phone"
                android:text="登入密码"
                android:textSize="15sp"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/ed_pass"
                android:hint="请输密码"
                android:layout_marginLeft="4dp"
                android:paddingLeft="8dp"
                android:inputType="textPassword"
                android:background="@drawable/edit_selected_drawable"
                android:layout_toRightOf="@id/tv_pass"
                android:layout_alignTop="@id/tv_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        <Button
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_phone"
                android:layout_alignTop="@id/tv_pass"
                android:text="忘记密码"
                android:id="@+id/forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        <CheckBox
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_pass"
                android:text="记住密码"
                android:id="@+id/save_pass"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        <Button
                android:id="@+id/login_btn"
                android:text="登录"
                android:layout_below="@id/save_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/current_time"
                android:layout_below="@id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>